<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.and119_idi.filmflow">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher3"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.and119_idi.filmflow.view.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.and119_idi.filmflow.view.AddFilmActivity"
            android:theme="@style/AppTheme.Dialog">
        </activity>
        <activity
            android:name="com.and119_idi.filmflow.view.AddFilmActivityNext"
            android:theme="@style/AppTheme.Dialog">
        </activity>
        <activity
            android:name="com.and119_idi.filmflow.view.AboutActivity"
            android:theme="@style/AppTheme.Dialog">
        </activity>
        <activity
            android:name="com.and119_idi.filmflow.view.DetailsActivity"
            android:theme="@style/AppTheme.Dialog">
        </activity>
    </application>

</manifest>