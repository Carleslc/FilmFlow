<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardview:cardCornerRadius="20dp"
    cardview:paddingEnd="15dp"
    cardview:paddingStart="15dp"
    cardview:cardBackgroundColor="#E0E0E0"
    cardview:cardElevation="10dp"
    cardview:cardUseCompatPadding="true">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="1"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="right|top"
            android:layout_row="0"
            android:layout_column="1"
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:padding="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="#444"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="(2000)"
            />

        <RelativeLayout
            android:layout_gravity="right|bottom"
            android:layout_row="0"
            android:layout_column="1">

            <ImageView
                android:id="@+id/starIcon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_star_grande"
                android:adjustViewBounds="false"
                android:layout_toEndOf="@+id/mark" />
            <TextView
                android:id="@+id/mark"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#444"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="8"
                tools:text="8" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_gravity="left"
            android:layout_row="0"
            android:layout_column="0">


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:padding="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#444"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="test" />

            <TextView
                android:id="@+id/director"
                android:layout_below="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:padding="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#444"
                android:textSize="18dp"
                android:textStyle="italic|bold"
                android:text="test" />
            <TextView
                android:id="@+id/actor"
                android:layout_below="@+id/director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:padding="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#444"
                android:textSize="18dp"
                android:textStyle="italic|bold"
                android:text="test" />

            <TextView
                android:id="@+id/country"
                android:layout_below="@+id/actor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:padding="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#444"
                android:textSize="18dp"
                android:textStyle="italic|bold"
                android:text="test" />

        </RelativeLayout>

    </GridLayout>
</android.support.v7.widget.CardView>