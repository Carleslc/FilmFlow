<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardview:cardElevation="@dimen/cardview_elevation"
    cardview:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/show_films"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:textAppearance="@android:style/TextAppearance.DialogWindowTitle"
            android:text="@string/show_films_about"/>


        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_below="@+id/show_films"
            android:layout_marginStart="@dimen/margin_startend_divider"
            android:layout_marginEnd="@dimen/margin_startend_divider"
            android:background="@android:color/darker_gray" />



        <TextView
            android:id="@+id/add_film"
            android:layout_below="@+id/divider1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:textAppearance="@android:style/TextAppearance.DialogWindowTitle"
            android:text="@string/add_film_about"/>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_below="@+id/add_film"
            android:layout_marginStart="@dimen/margin_startend_divider"
            android:layout_marginEnd="@dimen/margin_startend_divider"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/delete_film"
            android:layout_below="@+id/divider2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingStart="25dp"
            android:textAppearance="@android:style/TextAppearance.DialogWindowTitle"
            android:text="@string/delete_film_about"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>