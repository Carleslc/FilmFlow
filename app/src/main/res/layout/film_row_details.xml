<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardview:cardBackgroundColor="@color/cardview_background_color"
    cardview:cardCornerRadius="@dimen/corner_radius_cards"
    cardview:cardElevation="@dimen/cardview_elevation"
    cardview:cardUseCompatPadding="true"
    cardview:paddingEnd="@dimen/cardview_padding"
    cardview:paddingStart="@dimen/cardview_padding">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:ellipsize="end"
            android:maxEms="12"
            android:padding="8dp"
            android:text="ssssssssssssssssssssssssssssssss"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="1">


            <RelativeLayout
                android:layout_column="1"
                android:layout_gravity="end|bottom"
                android:layout_row="0">

                <ImageView
                    android:id="@+id/starIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/mark"
                    android:adjustViewBounds="false"
                    android:src="@drawable/ic_star_grande"/>

                <TextView
                    android:id="@+id/mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="8"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    tools:text="8" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_column="0"
                android:layout_gravity="start"
                android:layout_row="0">


                <TextView
                    android:id="@+id/year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:padding="8dp"
                    android:text="test"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="15sp"
                    android:textStyle="italic|bold"/>

                <TextView
                    android:id="@+id/director"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/year"
                    android:layout_marginStart="12dp"
                    android:padding="8dp"
                    android:text="test"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="15sp"
                    android:textStyle="italic|bold"/>

                <TextView
                    android:id="@+id/actor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/director"
                    android:layout_marginStart="12dp"
                    android:padding="10dp"
                    android:text="test"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="15sp"
                    android:textStyle="italic|bold"/>

                <TextView
                    android:id="@+id/country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/actor"
                    android:layout_marginStart="12dp"
                    android:padding="10dp"
                    android:text="test"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="15sp"
                    android:textStyle="italic|bold"/>

            </RelativeLayout>

        </GridLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>